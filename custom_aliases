# Git commands

alias gstat="git status"
alias gadd="git add *"
alias gpush="git push -u origin master"
alias gtree="git log --graph --abbrev-commit --decorate --date=relative --format=format:'\''%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'\'' --all"



# General development shorthand commands

# Get line count of a given file type/name
alias lc="find . -name '$i' | xargs wc -l"
# Command line history search (the lazy way)
alias hs="history | grep"
# 'Smart' ls, shows hidden files and human readable file sizes
alias sls="ls -lah"
# Convert the Windows tracert to Linux's traceroute
alias tracert="traceroute"

